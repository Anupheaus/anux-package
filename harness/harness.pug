doctype html
html
  head
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Roboto")        
    style.
      html,
      body {
        background-color: transparent;
        font-family: 'Roboto', Arial, Helvetica, sans-serif;
        font-size: 10pt;
        height: 100%;
        margin: 0;
        padding: 0;
        position: relative;
      }

      * {
        box-sizing: border-box !important;
        user-select: none;
      }

      body > page {
        display: flex;
        flex: auto;
        flex-direction: column;
        height: 100%;
      }

      body > page > div.harnesses {
        display: flex;
        flex: none;
        padding: 10px;
        flex-wrap: wrap;
        justify-content: flex-start;
      }

      body > page > div.harnesses > div.harness-selector {
        display: flex;
        flex: none;
        box-shadow: 0 0 4px 0px rgba(0, 0, 0, 0.2);
        padding: 10px;
        margin: 10px;
        border: solid 1px rgba(0, 0, 0, 0.3);
        cursor: pointer;
      }

      body > page > div.harnesses > div.harness-selector:hover {
        background-color: #0075ff30;
      }
    


  body
    page
    block content
