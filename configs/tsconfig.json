{
  "compilerOptions": {
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "resolveJsonModule": true,
    "lib": [
      "es2018",
      "dom",
      "scripthost",
      "esnext.asynciterable"
    ],
    "target": "es2018",
    "sourceMap": true,
    "jsx": "react",
    "types": [
      "anux-package",
      "mocha",
      "chai",
      "chai-spies",
      "chai-fuzzy"
    ]
  },
  "exclude": [
    "node_modules",
    "../../../dist",
    "../../dist",
    "**/*_dnc/**/*.*",
    "**/*.tests.*"
  ],
  "typeAcquisition": {
    "exclude": [
      "../../../dist",
      "../../dist"
    ]
  }
}